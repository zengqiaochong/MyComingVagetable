<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_slide"
    >
    <!--顶部标题栏-->
    <RelativeLayout
        android:id="@+id/my_cai_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/return_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/iv_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="菜品列表"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/list_tab"
        android:layout_below="@id/my_cai_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
     <ImageView
          android:layout_width="wrap_content"
          android:layout_height="120dp"
          android:src="@drawable/s8"
          />
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="1dp"
    android:layout_above="@+id/bottom_tab_layout"
    android:layout_below="@id/list_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/comm_type"
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/typelistview"
            >
        </ListView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_toRightOf="@+id/comm_type"
        android:id="@+id/recyclerView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
         <ListView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/listview"
             >
         </ListView>
    </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cart_layout1"
        android:layout_above="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/cart_top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cart_ba_layout"
            >
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cart_ba_layout"
          android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_slide"
            >
        <RelativeLayout
            android:id="@+id/cart_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white_slide"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="15sp"
                />
            <RelativeLayout
                android:id="@+id/empty_cart"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/delete_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iv_del_box"
                    />
                <TextView
                    android:layout_toRightOf="@id/delete_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    <RelativeLayout
     android:layout_below="@id/cart_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minHeight="50dp"
    android:background="@color/white"
        >
        <ListView
            android:id="@+id/cart_comm_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"

        >
        <RelativeLayout
            android:background="@color/onsell_time_color"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/settlement"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="去结算"
                android:background="@color/Dark_green"
                android:textSize="14sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/Shopping_cart_img"
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/shoe_Shopping_cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/s7"
                />
            <Button
                android:id="@+id/cart_size"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/iv_progressing"
                android:text="0"
                android:maxLength="2"
                android:textColor="@color/white"
                android:textSize="11sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/Shopping_cart_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/total_price"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="￥0.00"
                />
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:id="@+id/freight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_text_color"
                    android:textSize="14sp"
                    android:text="另需配送费1元"
                    />
              <TextView
                    android:id="@+id/free_shipping"
                    android:maxLines="1"
                    android:layout_below="@id/freight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp"
                    android:text="满10元起送"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
