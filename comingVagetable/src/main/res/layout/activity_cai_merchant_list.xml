<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/cai_type_layout"
    >
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <RelativeLayout
            android:id="@+id/cai_merchant_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cai_merchant_img"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@color/Dark_green"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cai_merchant_img_layout"
            android:id="@+id/cai_merchant_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/cai_merchant_name"
                android:text="商家名字"
                android:textSize="16sp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/cai_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ 满10起送"
                android:textSize="12sp"

                android:lines="1"
                android:ellipsize="end"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击选购"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="@color/line_black"
            />
        </RelativeLayout>

</RelativeLayout>
