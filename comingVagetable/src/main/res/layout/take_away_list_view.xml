<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_slide"
    >
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/commodity_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/commodity_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/none"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/store_user_msg_layout"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/commodity_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/store_user_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:maxLines="1"
                    android:id="@+id/store_commodity_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜品名称"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/store_commodity_Price_layout"
                android:layout_below="@id/store_user_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/store_shipping_method_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存:"
                    android:singleLine="true"
                    android:textColor="@color/hint_text_color"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/store_commodity_Price"
                    android:layout_toRightOf="@id/store_shipping_method_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/hint_text_color"
                    android:textSize="13sp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_below="@id/store_commodity_Price_layout"
                android:id="@+id/store_service_address_layput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/store_Inventory_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Light_red"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/inventory_quantity"
                    android:layout_toRightOf="@id/store_Inventory_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Light_red"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_toRightOf="@+id/cai_size"
                android:id="@+id/cai_increase"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13sp"
                android:background="@drawable/s52"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
