<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_item_product_pic"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/iv_product" />

    <TextView
        android:id="@+id/tv_item_product_des"
        style="@style/tv_main_grid_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="有机精品红椒散装促销"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_product_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="重量:>0.48kg/份"
        android:textColor="@color/mark_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tv_price_round_corner_bg"
        android:padding="5dp"
        android:textSize="12dp"
        android:text="今日最低售价：11.30元/份"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_onsell_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="市场参考价格：4元/斤"
        android:textColor="@color/mark_black"
        android:textSize="12sp" />
</LinearLayout>