<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜品："
            android:textColor="@color/mark_black" />

        <TextView
            android:id="@+id/tv_vege_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白菜"
            android:textColor="@color/des_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true" 
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量：x"
                android:textColor="@color/mark_black" />

            <TextView
                android:id="@+id/tv_vege_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/des_black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价：¥"
                android:textColor="@color/mark_black" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.6"
                android:textColor="@color/money_yellow" 
                />
            
            <TextView
                android:id="@+id/tv_order_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/money_yellow" 
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>