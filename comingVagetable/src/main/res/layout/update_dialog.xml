<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_location"
    android:orientation="vertical"
	android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="更新提示！"
        android:textColor="@color/des_black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" 
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_baidu_located_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否马上下载最新版本？"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textColor="@color/des_black" />
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注意：你正在使用手机流量。"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/mark_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >

          <TextView
            android:id="@+id/tv_update_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="下次再说"
            android:textColor="@color/mark_black"
            android:textSize="16sp" />
		<View
		    android:layout_width="0.5dp"
		    android:layout_height="match_parent"
		    android:background="@color/mark_black"
		    />
          
        <TextView
            android:id="@+id/tv_update_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="马上下载"
            android:textColor="@color/button_blue"
            android:textSize="16sp" />
        
    </LinearLayout>

</LinearLayout>